<Window x:Class="TodoList.MainWindow"
        Background="#171719"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <TextBlock Text="Lägg till saker att göra i listan nedan:" FontSize="20" Margin="10 10 10 10" />
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="400" Height="30"/>
        <Button Name="AddButton"  Content="Lägg till uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="420,40,0,0" Click="AddButton_OnClick" />
        
        <ListBox Name="TasksListBox" HorizontalAlignment="Left" Height="200" Margin="10,80,0,0" VerticalAlignment="Top" Width="510"/>
        
        <Button Name="RemoveButton" Content="Ta bort uppgift" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="420,300,0,0" Click="RemoveButton_OnClick" />
        <Button Name="ClearlistButton" Content="Rensa allt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="20,300,0,0" Click="ClearlistButton_OnClick" />
    </Grid>
</Window>
